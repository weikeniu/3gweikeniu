            <script>

           
			$(function(){
				//$("body").animate({scrollTop:"1px"},100)
			})
		 

                $("#k-yes").click(function () {
                    $.ajax({
                        url: '/t/SaveInfo',
                        type: 'post',
                        data: {
                            Id: '<%=Request.QueryString["r"] %>', type: "ok"
                        },
                        dataType: 'json',
                        success: function (ajaxObj) {

                            if (ajaxObj.Status == 1) {
                                $(".div_yes").show();
                                setTimeout('$(".div_yes").hide();', 2000);

                            }


                            else {
                                layer.msg("提交失败");
                            }

                        }
                    });

                });


                $("#k-no,#btn_no").click(function () {

                    var reason = "";

                    var isanniu = false;

                    if ($(this).hasClass("anniu")) {

                        isanniu = true;
                        $(".ma-c  .cur").each(function (i, item) {
                            reason += $(item).parent().text() + ",";
                        });

                        if (reason == "") {

                            layer.msg("请填写理由");
                            return false;
                        }

                    }

                    $.ajax({
                        url: '/t/SaveInfo',
                        type: 'post',
                        data: {
                            Id: '<%=Request.QueryString["r"] %>', reason: reason, type: "no"
                        },
                        dataType: 'json',
                        success: function (ajaxObj) {
                            if (ajaxObj.Status == 1) {
                                if (isanniu) {
                                    $(".kt-no").hide();
                                    $(".div_yj").show();
                                    setTimeout('$(".div_yj").hide()', 2000);
                                }

                                else {
                                    $(".kt-no").show();
                                }
                            }

                            else {
                                layer.msg("提交失败");
                            }

                        }
                    });

                });


                $("#btn_hotel").click(function () {

                    if ($("#h_hotel").val().trim() == "") {

                        layer.msg("请请输入酒店名称");
                        return false;


                    }

                    if ($("#h_name").val().trim() == "") {

                        layer.msg("请输入姓名");
                        return false;

                    }



                    if (!/^1\d{10}$/.test($("#h_mobile").val().trim())) {

                        layer.msg("手机号码格式不对");
                        return false;
                    }


                 

                    $.ajax({
                        url: '/t/SaveInfo',
                        type: 'post',
                        data: {
                            Id: '<%=Request.QueryString["r"] %>', hotelName: $("#h_hotel").val().trim(), userName: $("#h_name").val().trim(), tel: $("#h_mobile").val().trim(), type: "hotel"
                        },
                        dataType: 'json',
                        success: function (ajaxObj) {
                            if (ajaxObj.Status == 1) {


                                $("#h_hotel").val("");
                                $("#h_name").val("");
                                $("#h_mobile").val("");

                                $(".div_yes").show();
                                setTimeout('$(".div_yes").hide()', 2000);

                            }

                            else {
                                layer.msg("提交失败");
                            }

                        }
                    });



                });
        
